

### backend/server.js


```javascript
const express = require('express');
const cors = require('cors');
const dobbyRoutes = require('./routes/dobby');
const foursquareRoutes = require('./routes/foursquare');
const geoapifyRoutes = require('./routes/geoapify');


const app = express();
app.use(cors());
app.use(express.json());


// If deployed, allow front-end origin via env
const FRONTEND_URL = process.env.FRONTEND_URL;
if (FRONTEND_URL) {
app.use(cors({ origin: FRONTEND_URL }));
}


app.use('/dobby', dobbyRoutes);
app.use('/places', foursquareRoutes);
app.use('/map', geoapifyRoutes);


const PORT = process.env.PORT || 3000;
app.listen(PORT, () => console.log(`ğŸš€ Server running on port ${PORT}`));
